<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DotsLoader">
        <attr name="loader_defaultColor" format="color" />
        <attr name="loader_selectedColor" format="color" />
        <attr name="loader_circleRadius" format="dimension" />
        <attr name="loader_animDur" format="integer" />
        <attr name="loader_showRunningShadow" format="boolean" />
        <attr name="loader_firstShadowColor" format="color" />
        <attr name="loader_secondShadowColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LinearDotsLoader">
        <attr name="loader_noOfDots" format="integer" />
        <attr name="loader_dotsDist" format="dimension" />
        <attr name="loader_isSingleDir" format="boolean" />
        <attr name="loader_expandOnSelect" format="boolean" />
        <attr name="loader_selectedRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircularDotsLoader">
        <attr name="loader_bigCircleRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circleRadius" format="dimension" />
        <attr name="circleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AnimatingLinearLayout">
        <attr name="all_dotsRadius" format="dimension" />
        <attr name="all_dotsDist" format="dimension" />
        <attr name="all_dotsColor" format="color" />
        <attr name="all_animDur" format="integer" />
        <attr name="all_interpolator" format="integer" />
    </declare-styleable>

    <declare-styleable name="LazyLoader">
        <attr name="lazyloader_firstDelayDur" format="integer" />
        <attr name="lazyloader_secondDelayDur" format="integer" />
    </declare-styleable>

    <declare-styleable name="TashieLoader">
        <attr name="tashieloader_noOfDots" format="integer" />
        <attr name="tashieloader_animDelay" format="integer" />
    </declare-styleable>


</resources>